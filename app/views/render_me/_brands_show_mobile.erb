<style>

@media only screen and (max-width: 360px), (max-width: 420px) {
  .categ-all-mobile {
    width: 100%;
  }

  .categ-all-mobile {
    display: flex;
  }

  .Categ-icon {
    width: 19%;
    top: 0;
    position: sticky;
    margin-right: 5px;
  }

  .product-brand {
    width: 100%;

  }

  .cart-item-description-brand {
    width: 60%;
  }

  center#paginate-center {
    margin-left: -15%;
  }

  div#content {
    margin-bottom: 0px !important;
  }

  #center_panel {
    text-align: center;
    height: 170px;
    width: 170px;
