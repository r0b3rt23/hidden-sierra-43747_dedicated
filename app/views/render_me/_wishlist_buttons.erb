  .Cartbuttons {
    width: 90%;
  }
}
</style>

<div class="Cartbuttons">
  <div class="out">
    <div class="continueShop">
      <center><%= link_to Spree.t(:continue_shopping), products_path, id:'continue', class: 'btn btn-default' %></center>
    </div>
  </div>
</div>
<% if respond_to?(:email_to_friend_url) %>
  <%= link_to t('email_to_friend.send_to_friend'), email_to_friend_url('wishlist', @wishlist), :class => "button" %>
<% end %>
